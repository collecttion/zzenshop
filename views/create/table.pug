extends ../layout/manager

block conten
  .wrapper
    .sidebar(data-image='../assets/img/sidebar-5.jpg')
      .sidebar-wrapper
        .logo
          a.simple-text(href='http://www.creative-tim.com')
            | Zenshop
        ul.nav
          li
            a.nav-link(href='dashboard.html')
              i.fas.fa-chart-line
              p Dashboard
          li
            a.nav-link(href='/create')
              i.far.fa-user-circle
              p User Profile
          li.nav-item.active
            a.nav-link(href='table')
              i.fas.fa-receipt
              p Table List
          li
            a.nav-link(href='./typography.html')
              i.fab.fa-typo3
              p Typography
          li
            a.nav-link(href='./icons.html')
              i.fab.fa-react
              p Icons
          li
            a.nav-link(href='./maps.html')
              i.fas.fa-map-marker-alt
              p Maps
          li
            a.nav-link(href='./notifications.html')
              i.far.fa-bell
              p Notifications
          li.nav-item.active.active-pro
            a.nav-link.active(href='upgrade.html')
              i.fab.fa-superpowers
              p Upgrade to PRO
    .main-panel
      // Navbar
      nav.navbar.navbar-expand-lg(color-on-scroll='500')
        .container-fluid
          h3 Table Conten
          button.navbar-toggler.navbar-toggler-right(href='', type='button', data-toggle='collapse', aria-controls='navigation-index', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-bar.burger-lines
            span.navbar-toggler-bar.burger-lines
            span.navbar-toggler-bar.burger-lines
          #navigation.collapse.navbar-collapse.justify-content-end
            ul.nav.navbar-nav.mr-auto
              li.nav-item
                  span.d-lg-none Dashboard
              li.dropdown.nav-item
                a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
                  i.fas.fa-receipt
                  span.notification 5
                  span.d-lg-none Notification
                ul.dropdown-menu
                  a.dropdown-item(href='#') Notification 1
                  a.dropdown-item(href='#') Notification 2
                  a.dropdown-item(href='#') Notification 3
                  a.dropdown-item(href='#') Notification 4
                  a.dropdown-item(href='#') Another notification
            ul.navbar-nav.ml-auto
              li.nav-item
                a.nav-link(href='/auth/login')
                  span.no-icon Log out &nbsp;
                  i.fas.fa-sign-out-alt

      // End Navbar
      .content
        .container-fluid
          .row
            .col-md-12
              .card.card-plain.table-plain-bg
                .card-header
                  h4.card-title Các bài đã đăng
                  p.card-category Here is a subtitle for this table
                .card-body.table-full-width.table-responsive
                  table.table.table-hover
                    thead
                      th Name
                      th ID
                      th Ngày
                      th prince
                      th Edit
                      th Xóa bài
                      
                    tbody
                    each posts in post
                      tr
                        td=posts.name
                        td=posts._id
                        td
                        td="$" + posts.price
                        td
                          button.btn.btn-danger
                              a(href="/create/table/edit" + posts.id ) Edit
                        td
                          button.btn.btn-danger
                              a(href="/create/table" + posts.id ) x
                        
      footer.footer
        .container-fluid
          nav
            ul.footer-menu
              li
                a(href='#')
                  | Home
              li
                a(href='#')
                  | Company
              li
                a(href='#')
                  | Portfolio
              li
                a(href='#')
                  | Blog
            p.copyright.text-center
              | &copy;