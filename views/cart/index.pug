extends ../layout/cartComon

block conten
  .container
    // navbar
    nav.navbar.navbar-expand-lg.navbar-light.sticky-top
      a.navbar-brand.display-4.font-weight-bold(href='/') ZenShop
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        ion-icon(name='menu')
      #navbarNav.collapse.navbar-collapse
        .mr-auto
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='#') TECH
          li.nav-item
            a.nav-link(href='#') VINTAGE
          li.nav-item
            a.nav-link(href='/create') BLOG
          li.nav-item
            a.nav-link.disabled(href='/cart')
              i.fas.fa-cart-plus
          li.nav-item
            a.nav-link.disabled(href='#')
              ion-icon(name='list')
    div.title
      h1.text-center.p-4
  main
    .container
        .row
            .col-xl-8.col-lg-6
              h4 Shopping cart
              br
              div.table
                .row
                  if session.cart
                    -index = 0
                    -sum = 0
                  each item in session.cart
                    -sum += item.product.price*item.quantity
                    div.product.col-xl-2.col-lg-4.col-md-3.col-sm-3.col-4
                      img(src=item.product.imgeFile)
                      hr
                    div.col-xl-4.col-lg-4.col-md-4.col-sm-4.col-4
                      a=item.product.name
                      p="" + item.quantity

                    div.col-xl-6.col-lg-4.col-md-5.col-sm-5.col-4.closes
                      a.text-danger(href="/delete/" + index) X
                      -index++
                      br
                      br
                      p="$" + item.product.price*item.quantity
              div.continue 
                a.repon(href="/") Continue shopping
              div.upload 
                a.repon uplod
                      
            .col-xl-4.col-lg-6.totals
              h4 cart cradit
              br
              form.formcoi
                .form-group.mb-0.row
                  label.p-3.col-form-label(for='') Enter coupon
              form.formcoi
                .form-group.mb-0.row
                  label.p-3.col-form-label(for='') Calculate shipping
              form.formcoi
                .form-group.mb-0.row
                  .col-xl-8
                    label.p-9.col-form-label(for='') Subtotal
                  .col-xl-4
                    p.mt-3="$" + sum
                hr
                fieldset.form-group
                  .row
                    legend.col-form-label.col-sm-2.pt-0 Shipping
                    .col-sm-10
                      br
                      .form-check
                        input#gridRadios2.form-check-input(type='radio', name='gridRadios', value='option2')
                        label.form-check-label(for='gridRadios2')
                          | Standard:
                      .form-check.disabled
                        input#gridRadios3.form-check-input(type='radio', name='gridRadios', value='option3', disabled='')
                        label.form-check-label(for='gridRadios3')
                          | Express:
                .form-group.row
                  .col-sm-12 Shipping to Vietnam.

                hr
                .form-group.row
                  .col-xl-8.col-lg-8.col-md-8.col-sm-8.col-8
                    label.col-form-label(for='') Total
                  .col-xl-4.col-lg-4.col-md-4.col-sm-4.col-4
                    p="$" + sum
              .form-group.row
                .col-xl-12
                  p.button-cart
                    button.btn(type='button')
                        strong
                          a(href="") pay
                
      
    .container.pt-5.pb-5
      .row
        .col-xl-12
          .end
            p Copyright 2019 ThanhTuan. All Rights Reserved.
  footer
      script(type='text/javascript').
        var scroll1 = window.pageYOffset;
        window.onscroll = function(){
        var scroll2 = window.pageYOffset;
        if (scroll1 > scroll2) {
        document.querySelector('nav').style.top = "0";
        }else{
        document.querySelector('nav').style.top = "-100px";
        }
        scroll1 = scroll2;
        }
